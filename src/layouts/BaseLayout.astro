---
import { ViewTransitions } from "astro:transitions";
import Footer from "./Footer.astro";
import Header from "./Header.astro";

interface Props {
  title: string;
}

const {
  title = "Alvillanta | Ofertas | Venta de Neumáticos y Llantas de calidad",
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />

    <meta
      name="description"
      content="Somos una empresa importadora Multimarca de Llantas o Neumáticos para Autos, Camionetas y Camiones al mejor precio del mercado. Ofrecemos variedad de tamaños de llantas y aros, con marcas reconocidas como Michelin, Continental, Pirelli, Yokohama, Goodyear, entre otras. ¡Disfruta de promociones y ofertas con nosotros!"
    />
    <meta
      name="keywords"
      content="venta de llantas,venta llanta, llantas de auto, llantas precios, llantas en lima, ofertas de llantas, venta de neumaticos, promociones de llantas, neumáticos para autos, llantas para autos precios, llantas aro, llantas aro 15, lima caucho, dunlop tires, continental, michelin, hankook, continental, pirelli, yokohama, goodyear, tires, falken, bridgestone, firestone, sumitomo, triangle, westlake, gt radial, aeolus, delinte, federal, general tire, kumho tire, nexen tires, toyo tires"
    />

    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="./favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <div class="general-wrapper">
      <Header />
      <div class="main">
        <slot />
      </div>
      <Footer />
    </div>
    <style is:global lang="scss">
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html {
        font-family: system-ui, sans-serif;
        background: rgb(5, 5, 5);
        color: #fff;
      }

      body {
        margin: 0;
        font-size: 16px;
      }

      .general-wrapper {
        max-width: 1530px;
        margin: auto;
        position: relative;
        background: #13151a;
      }

      .main {
        width: 100%;
        height: auto;
      }

      .color {
        &__primary {
          color: #f40f0f;
        }
        &__secondary {
          color: #0c0c0ccc;
        }
        &__white {
          color: #fff;
        }
        &__black {
          color: #000;
        }
      }
    </style>
  </body>
</html>
