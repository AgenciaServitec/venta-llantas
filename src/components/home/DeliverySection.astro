  .banner {
    width: 100%;
    height: 300px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #f40f0f;
    position: relative;
    @media (max-width: 1200px) {
      flex-direction: column;
      align-items: center;
      padding: 4rem 0;
      height: 400px;
    }
    @media (max-width: 920px) {
      padding: 3rem;
      height: 400px;
    }
    @media (max-width: 768px) {
      padding: 2rem;
    }
    @media (max-width: 576px) {
      padding: 2rem;
      height: 300px;
    }
    @media (max-width: 320px) {
      padding: 1.5rem;
      height: 250px;
    }
    h2 {
      text-transform: uppercase;
      font-style: italic;
      font-size: 3rem;
      color: #000;
      line-height: 0.85;

      span {
        display: block;
        font-size: 2em;
        color: #fff;
      }
      @media (max-width: 920px) {
        font-size: 2.5rem;
      }
      @media (max-width: 576px) {
        font-size: 2rem;
        text-align: center;
      }
      @media (max-width: 320px) {
        font-size: 1.5rem;
      }
    }
    div {
      align-self: center;
      z-index: 300;
      img {
        width: 450px;
        @media (max-width: 920px) {
          width: 350px;
        }
        @media (max-width: 576px) {
          width: 250px;
