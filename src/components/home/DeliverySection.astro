        left: 50%;
      }
      img {
        position: absolute;
        bottom: -3.75rem;
        @media (max-width: 920px) {
          bottom: -2.8rem;
        }
        @media (max-width: 576px) {
          bottom: -2rem;
          transform: translateX(-50%);
        }
        @media (max-width: 320px) {
          bottom: -1.5rem;
        }
      }
    }
    &__texts {
      display: grid;
      gap: 1em;
      .phone-item {
        font-size: 3.5rem;
        color: #ffe223;
        background: black;
        padding: 0.3em 1em;
        border-radius: 7em;
        @media (max-width: 576px) {
          font-size: 3rem;
        }
      }
    }
    &__imgLlantas {
      position: absolute;
      right: 1.5rem;
      bottom: 0;
      @media (max-width: 576px) {
        display: none;
      }
      img {
        position: absolute;
        right: 0;
        bottom: -1px;
      }
    }
  }
