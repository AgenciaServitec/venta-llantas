---
import Button from "./Button.astro";

const styleButton = {
  width: "9.5em",
  borderRadius: "0",
  position: "absolute",
  bottom: "0",
  right: "0",
  textTransform: "uppercase",
};
---

<article class="product">
  <div class="product__img">
    <span class="product__destac">Destacado</span>
    <img src="../../public/images/producto.svg" alt="" />
  </div>
  <div class="product__text">
    <p>Kinergy Eco K425 175/80</p>
    <p>R14<span>Hankook</span></p>
    <Button styleLine={styleButton}>Cotizar</Button>
  </div>
</article>

<style lang="scss">
  .product {
    background-color: #a7a7a7;
    width: auto;
    text-transform: uppercase;
    font-weight: 700;
    position: relative;
    padding: 0.85rem;
    border-radius: 15px;
    display: flex;
    flex-direction: column;
    gap: 0.85rem;

    &__img {
      width: 100%;
      height: 225px;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }

    &__destac {
      background-color: #222;
      position: absolute;
      top: 1rem;
      right: 1rem;
      padding: 0.3125rem;
      letter-spacing: 2px;
    }

    &__text {
      background-color: #fff;
      color: #777;
      padding: inherit;
      position: relative;
    }

    span {
      color: #eaa335;
    }
  }
</style>
