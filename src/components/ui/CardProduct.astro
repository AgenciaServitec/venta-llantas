---
import Button from "./Button.astro";
import { Astro } from "astro/env";

const styleButton = {
  width: "9.5em",
  borderRadius: "0",
  position: "absolute",
  bottom: "0",
  right: "0",
  textTransform: "uppercase",
};

const { name, brand, model, imagePath } = Astro.props;
---

<article class="product">
  <div class="product__img">
    <span class="product__destac">Destacado</span>
    <img src={imagePath} alt={name} />
  </div>
  <div class="product__text">
    <p>{name}</p>
    <p>{model}<span>{brand}</span></p>
    <a
      href="/contact"
      style="width: 9.5em;
       border-radius: 0;
       position: absolute;
       bottom: 0;
       right: 0;
       text-transform: uppercase;
       color: #fff;
       background-color: #f40f0f;
       text-align: center;
       text-decoration: auto;
      padding: 3px;"
      >Cotizar</a
    >
  </div>
</article>

<style lang="scss">
  .product {
    background-color: #a7a7a7;
    width: 100%;
    height: auto;
    text-transform: uppercase;
    font-weight: 700;
    position: relative;
    padding: 0.8rem;
    border-radius: 15px;
    display: flex;
    flex-direction: column;
    gap: 0.85rem;

    &__img {
      width: 100%;
      height: 250px;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }

    &__destac {
      background-color: #222;
      position: absolute;
      top: 1rem;
      right: 1rem;
      padding: 0.3125rem;
      letter-spacing: 2px;
    }

    &__text {
      width: 100%;
      height: auto;
      background-color: #fff;
      color: #777;
      padding: inherit;
      position: relative;
    }

    span {
      color: #f40f0f;
      margin-left: 0.3em;
    }
  }
</style>
