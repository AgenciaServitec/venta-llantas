---
interface Props {
  type?: "primary" | "secondary" | "tertiary";
  styleLine?: Record<string, string>;
}

const { type = "primary", styleLine } = Astro.props;
---

<button class={type} style={styleLine}>
  <slot />
</button>

<style lang="scss">
  button {
    display: flex;
    place-items: center;
    gap: 0.2em;
    padding: 0.7em 1.2em;
    text-align: center;
    border-radius: 7em;
    border: none;
    font-weight: 600;
    cursor: pointer;
  }
  .primary {
    background-color: #fe4e02;
    color: #fff;
  }
  .secondary {
    background-color: #8b8b8b;
    color: #fff;
  }
  .tertiary {
    margin: 0 auto;
    font-size: 1.5em;
    text-transform: upperCase;
    font-style: italic;
    background-color: #fe4e02;
    color: #fff;
  }
</style>
