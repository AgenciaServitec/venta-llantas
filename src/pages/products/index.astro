---
import { BaseLayout } from "../../layouts";
import { Button, CardProduct, Title } from "../../components";
import { products } from "../../data-list";
---

<BaseLayout title="Productos">
  <main>
    <Title title="NUESTROS">PRODUCTOS</Title>
    <section class="card-list">
      {
        products.map((product, index) => (
          <CardProduct
            key={index}
            name={product.name}
            model={product.model}
            brand={product.brand}
            imagePath={product.imagePath}
          />
        ))
      }
    </section>
    <section class="quote-button">
      <a href="/contact">
        <Button type="tertiary">Cotizar otra llanta</Button>
      </a>
    </section>
  </main>
</BaseLayout>

<style lang="scss">
  main {
    width: 100%;
    padding: 12em 2em 2em 2em;
    @media (max-width: 576px) {
      padding: 3em 1.5em;
    }
  }
  .card-list {
    margin: auto;
    max-width: 1280px;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 1em;
    justify-content: center;
  }
  .quote-button {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 6em 0 2em;
    a {
      text-decoration: auto;
    }
  }
</style>
